{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["airbnb-base"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},

	"rules": {
		"no-console": "warn",
		"no-tabs": "off",
		"consistent-return": "off",
		"camelcase": [
			"error",
			{
				"properties": "always"
			}
		],
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"semi": ["error", "always"]
	}
}
